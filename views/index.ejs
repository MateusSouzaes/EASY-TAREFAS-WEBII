<div class="container">
  <div class="header">
    <h1>EASY-Tarefa</h1>
    <p>Bem-vindo, <strong><%= usuario.nome %></strong></p>
  </div>

  <div class="add-task-section">
    <h2>Adicionar Nova Tarefa</h2>
    <div class="form-group">
      <input type="text" id="titulo" placeholder="Nome da tarefa" class="input-task">
      <textarea id="descricao" placeholder="Descrição (opcional)" class="textarea-task"></textarea>
      <div class="form-row">
        <select id="prioridade" class="select-task">
          <option value="baixa">Prioridade Baixa</option>
          <option value="media" selected>Prioridade Média</option>
          <option value="alta">Prioridade Alta</option>
        </select>
        <button id="btnAdicionarTarefa" class="btn btn-primary">Adicionar Tarefa</button>
      </div>
    </div>
  </div>

  <div class="filters-section">
    <h2>Filtrar Tarefas</h2>
    <div class="filter-buttons">
      <button class="btn btn-filter active" data-filter="todas" id="btn-todas">Todas</button>
      <button class="btn btn-filter" data-filter="pendente" id="btn-pendente">Pendentes</button>
      <button class="btn btn-filter" data-filter="em_andamento" id="btn-em_andamento">Em Andamento</button>
      <button class="btn btn-filter" data-filter="concluida" id="btn-concluida">Concluídas</button>
    </div>
  </div>

  <div class="tasks-section">
    <h2>Lista de Tarefas</h2>
    <div id="lista" class="tasks-list"></div>
  </div>
</div>

<script src="/js/app.js"></script>
