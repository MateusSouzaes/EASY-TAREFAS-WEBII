<div class="container">
  <div class="header">
    <h1>Dashboard</h1>
    <p>Bem-vindo, <strong><%= usuario.nome %></strong></p>
  </div>

  <!-- Gr√°ficos de Estat√≠sticas -->
  <div class="stats-section">
    <div class="stats-grid">
      <!-- Gr√°fico de Status -->
      <div class="chart-container">
        <h2>üìä Status das Tarefas</h2>
        <div class="chart-wrapper">
          <canvas id="statusChart"></canvas>
        </div>
      </div>

      <!-- Gr√°fico de Projetos -->
      <div class="chart-container">
        <h2>üìÅ Tarefas por Projeto</h2>
        <div class="chart-wrapper">
          <canvas id="projectsChart"></canvas>
        </div>
      </div>

      <!-- Gr√°fico de Distribui√ß√£o por Status -->
      <div class="chart-container">
        <h2>üìà Distribui√ß√£o por Status</h2>
        <div class="chart-wrapper">
          <canvas id="distributionChart"></canvas>
        </div>
      </div>

      <!-- Estat√≠sticas R√°pidas -->
      <div class="stats-cards">
        <div class="stat-card stat-pendente">
          <div class="stat-value" id="statPendentes">0</div>
          <div class="stat-label">Pendentes</div>
        </div>
        <div class="stat-card stat-em_andamento">
          <div class="stat-value" id="statEmAndamento">0</div>
          <div class="stat-label">Em Andamento</div>
        </div>
        <div class="stat-card stat-concluida">
          <div class="stat-value" id="statConcluidas">0</div>
          <div class="stat-label">Conclu√≠das</div>
        </div>
      </div>
    </div>
  </div>

  <div class="dashboard-grid">
    <!-- Projetos Recentes -->
    <div class="dashboard-section">
      <div class="section-header">
        <h2>üìÅ Projetos Recentes</h2>
        <a href="/projetos" class="btn btn-primary">Ver Todos</a>
      </div>
      <div class="dashboard-cards">
        <% if (projetos && projetos.length > 0) { %>
          <% projetos.forEach(projeto => { %>
            <div class="dashboard-card">
              <h3><%= projeto.titulo %></h3>
              <p class="card-desc"><%= projeto.descricao || 'Sem descri√ß√£o' %></p>
              <a href="/projetos/<%= projeto.id %>/tarefas" class="btn btn-secondary">Ver Tarefas</a>
            </div>
          <% }) %>
        <% } else { %>
          <p class="no-tasks">Nenhum projeto. <a href="/projetos">Criar primeiro projeto</a></p>
        <% } %>
      </div>
    </div>

    <!-- Tarefas Recentes -->
    <div class="dashboard-section">
      <div class="section-header">
        <h2>üìã Tarefas Recentes</h2>
      </div>
      <div class="dashboard-list">
        <% if (tarefas && tarefas.length > 0) { %>
          <% tarefas.forEach(tarefa => { %>
            <div class="dashboard-item prioridade-<%= tarefa.prioridade %> status-<%= tarefa.status %>">
              <div class="item-content">
                <strong><%= tarefa.titulo %></strong>
                <span class="item-badge"><%= tarefa.projeto || 'Sem projeto' %></span>
              </div>
              <div class="item-badges">
                <span class="badge badge-prioridade"><%= tarefa.prioridade %></span>
                <span class="badge badge-status">
                  <%= tarefa.status === 'pendente' ? 'Pendente' : tarefa.status === 'em_andamento' ? 'Em Andamento' : 'Conclu√≠da' %>
                </span>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p class="no-tasks">Nenhuma tarefa cadastrada</p>
        <% } %>
      </div>
    </div>
  </div>

  <div class="dashboard-actions">
    <a href="/projetos" class="btn btn-primary btn-large">‚ûï Criar Novo Projeto</a>
  </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script src="/js/dashboard-charts.js"></script>

<style>
